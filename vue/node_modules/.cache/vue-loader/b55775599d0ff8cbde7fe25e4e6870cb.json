ser_message_right\">\r\n              {{message.message}}\r\n            </div>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n\r\n    <v-form class=\"typer\">\r\n      <v-textarea\r\n        v-model=\"content\"\r\n        class=\"pa-10\"\r\n        rows=\"1\"\r\n        append-icon=\"mdi-send\"\r\n        @click:append=\"sendMessage\"\r\n        v-on:keydown.enter.exact.prevent=\"sendMessage\"\r\n        >\r\n      </v-textarea>\r\n    </v-form>\r\n\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  data () {\r\n    return {\r\n      content: '',\r\n      chatMessages: [],\r\n      image_name: require(\"@/assets/default.png\"),\r\n    }\r\n  },\r\n  mounted(){\r\n\r\n  },\r\n  computed: {\r\n    username (){\r\n      return this.$store.getters['auth/getName']\r\n    },\r\n    userid(){\r\n      return this.$store.getters['auth/getUserId']\r\n    },\r\n    messages(){\r\n      return this.chatMessages\r\n    },\r\n  },\r\n  methods: {\r\n    sendMessage(){\r\n      if(this.content.trim() == ''){\r\n        return\r\n      }\r\n\r\n      this.$axios.post('http://192.168.56.102:3000/api/v1/sendMessage', {\r\n        message: this.content,\r\n        user_id: this.userid,\r\n        user_name: '',\r\n        room_id: this.$route.params['id']\r\n        //csrf_token: 'csrf_token here'\r\n      })\r\n      .then(response => {\r\n        //this.addMessage({message: this.content, user_id: this.userid, room_id: this.$route.params['id']})\r\n        this.content = ''\r\n        //console.log(response)\r\n      })\r\n      .catch(error => {\r\n        //console.log(error)\r\n      });\r\n    },\r\n    addMessage(message){\r\n      this.chatMessages.push(message)\r\n      this.scrollToEnd()\r\n    },\r\n    isOwner(user_id){\r\n      if(user_id == this.userid){\r\n        return true\r\n      }else{\r\n        return false\r\n      }\r\n    },\r\n    scrollToEnd () {\r\n        this.$nextTick(() => {\r\n          var container = this.$el.querySelector('.chat-container')\r\n          container.scrollTop = container.scrollHeight\r\n        })\r\n    },\r\n  }\r\n}\r\n</script>\r\n\r\n<style>\r\n.chat-board{\r\n}\r\n.chat-container{\r\n  box-sizing: border-box;\r\n  height: calc(100vh - 12rem);\r\n  overflow-y: auto;\r\n  padding: 10px;\r\n  background-color: #f2f2f2;\r\n}\r\n.item{\r\n  position:relative;\r\n  display: flex;\r\n  align-items: flex-end;\r\n  margin-bottom: 0.8em;\r\n}\r\n.ownerMessage{\r\n  margin:0 0 0 auto;\r\n  display: flex;\r\n}\r\n.partnerMessage{\r\n  margin:0 auto 0 0;\r\n  display: flex;\r\n}\r\n.user_icon img{\r\n  border-radius: 20px;\r\n  vertical-align: top;\r\n}\r\n.message_detail_right{\r\n  margin: 0 0 0 1.4em;\r\n}\r\n.message_detail_left{\r\n  margin: 0 1.4em 0 0;\r\n}\r\n.user_name{\r\n  font-size: 70%;\r\n}\r\n.user_message_right,\r\n.user_message_left{\r\n  position: relative;\r\n  padding: 0.8em;\r\n  background: #deefe8;\r\n  border-radius: 4px;\r\n  line-height: 1.2em;\r\n}\r\n.user_message_right::before {\r\n  position: absolute;\r\n  content: \" \";\r\n  display: block;\r\n  left: -16px;\r\n  bottom: 14px;\r\n  border: 4px solid transparent;\r\n  border-right: 12px solid #deefe8;\r\n}\r\n.user_message_left::before {\r\n  position: absolute;\r\n  content: \" \";\r\n  display: block;\r\n  right: -16px;\r\n  bottom: 14px;\r\n  border: 4px solid transparent;\r\n  border-left: 12px solid #deefe8;\r\n}\r\n.typer{\r\n  box-sizing: border-box;\r\n  display: flex;\r\n  align-items: center;\r\n  bottom: 0;\r\n  height: 4.9rem;\r\n  width: 100%;\r\n  background-color: #ffcce8;\r\n}\r\n\r\n</style>\r\n"]}]}